---
// contact.astro
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <h1>Contacto</h1>
  <p>Ponte en contacto con nosotros a través del siguiente formulario.</p>
  <form>
    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" required>
    <label for="email">Correo Electrónico:</label>
    <input type="email" id="email" name="email" required>
    <label for="message">Mensaje:</label>
    <textarea id="message" name="message" required></textarea>
    <button type="submit">Enviar</button>
  </form>

  <style>
    /* Estilos para el Formulario */
    form {
      max-width: 500px;
      margin: 2rem auto;
      padding: 1.5rem;
      border: 1px solid #333333; /* Color de bordes */
      border-radius: 8px;
      background-color: #1f1f1f; /* Fondo del nav */
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      color: #e0e0e0; /* Texto claro */
      font-weight: 500;
    }

    input, textarea {
      width: 100%;
      padding: 0.75rem;
      margin-bottom: 1rem;
      border: 1px solid #333333; /* Color de bordes */
      border-radius: 4px;
      background-color: #121212; /* Fondo oscuro */
      color: #e0e0e0; /* Texto claro */
      font-family: 'Poppins', sans-serif;
    }

    button {
      background-color: #bb86fc; /* Color de acento (morado claro) */
      color: #121212; /* Fondo oscuro */
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-family: 'Poppins', sans-serif;
      font-weight: 500;
    }

    button:hover {
      opacity: 0.9;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      form {
        padding: 1rem;
      }
    }
  </style>
</Layout>